@model AuthorVM


    
        <div class="card  container pt-4">
            <div class="card-header bg-dark text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Author.Name</h1>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Author.Description)</p>
                            </div>
                            
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Author.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="my-5">
            <p class="display-4 text-center">@Model.Author.Name Books</p>
        </div>
        <div class="row pb-3">
    @foreach (var book in Model.Books)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">

                <div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px;">
                    <div class="card h-100">
                        <img src="@book.ImageUrl" class="card-img-top rounded" style="height:240px;width:240px;" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title text-dark text-center fw-bold text-capitalize">@book.Title</p>
                                
                                <p class="card-title text-dark text-center text-capitalize"> <b>@book.Publisher</b></p>
                            </div>
                           
                        </div>
                       
                    </div>
                </div>

            </div>
        </div>
    }
</div>
                <div class="row">
                    <div class="col-12 pb-1">
                        <a class="btn btn-success form-control" style="height:50px;" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        